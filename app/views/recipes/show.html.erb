<section id="recipe-details">
  <h1> <%=@recipe.name%> </h1>
  <div class="recipe-info">
    <div>
      <span class="duration">Preparation time: <%=@recipe.preparation_time%> </span>
      <span class="duration">Cooking time: <%=@recipe.cooking_time%> </span>
      <p class="recipe-steps">
        <%=@recipe.description%>
      </p>
    </div>
    <div class="publicity-status">
      <span>Public</span>
      <label class="switch">
        <input type="checkbox" <%= @recipe.public ? 'checked' : '' %> >
        <span class="slider round"></span>
      </label>
    </div>
  </div>
  <div class="btn-links">
    <a class="btn-link" href="">Generate shopping list</a>
    <%= link_to 'Add ingredient', new_recipe_recipe_food_path(@recipe), class: 'btn-link' %>
  </div>
  <hr>
  <div class="food-info">
    <table>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Action</th>
      </tr>
      <% @recipe.recipe_foods.each do |food| %>
        <tr>
          <td> <%= food.food.name %> </td>
          <td> <%= food.quantity %> x <%= food.food.measurment_unit %></td>
          <td><%= food.food.price * food.quantity %></td>
          <td><a href="">Modify</a> <a href="">Remove</a></td>
        </tr>
      <%end%>
    </table>
  </div>
</section>
